<% include ../partials/header %>
<div class="container-fluid" id="welcome">
   <header class="jumbotron" id="jumbo">
       <div class="container">
       <h1>Welcome To CampZilla!</h1>
       <p><strong>Explore our CampSites from all over India.Pack your bags and get ready for a great experience!!</strong></p>
       <p>
        <a class="btn btn-danger btn-lg" href="/campsites/new"><i class="fas fa-plus-circle"></i> Add a New CampSite</a>   
       </p>
       </div>
   </header>
   <div class="row">
       <div class="col-lg-12">
           <h3 style="color:black; text-align:center; font-family:Georgia sans-serif;"><b><strong>Our most popular CampSites:</strong></b></h3>
       </div>
       </div>
      <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campsites.forEach(function(campsite){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= campsite.image %>">
                   <div class="caption">
                       <h4><%= campsite.name %></h4>
                   </div>
                   <a class="btn btn-success" href="/campsites/<%= campsite._id %>">Know More <i class="fas fa-info-circle"></i></a> 
                </div>
            </div>
        <% }); %>
    </div>
</div>
   






</div>
<% include ../partials/footer %>