
<% include ../partials/header %>

<div class="container">
<div class="row">
<h2 class="headingfornew"><b><strong>Add a New CampSite:</strong></b></h2>

<form action="/campsites" method="POST" id="newform">
    <div class="form-group">
    <input class="form-control" type="text" name="name" placeholder="Name" required></div>
    <div class="form-group">
    <input class="form-control" type="text" name="image" placeholder="Image URL" required></div>
    <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" placeholder="Thapar University, Patiala">
     </div>
    <div class="form-group">
    <textarea class="form-control custom-control" rows="6"  name="description" placeholder="Describe the CampSite" required></textarea></div>
    <div class="form-group">
    <input class="form-control" type="number" name="price" placeholder="Price" min="0" step="1" required></div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button></div>
    <a href="/campsites" >Go Back</a>
    </div>
</form>
</div>
</div>



<% include ../partials/footer %>