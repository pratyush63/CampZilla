<% include partials/header %>

<div class="container">
<div class="row">
<h2 class="headingfornew"><b><strong>SignUp:</strong></b></h2>

<form action="/signup" method="POST" id="newform">
    <div class="form-group">
    <input class="form-control" type="text" name="username" placeholder="User-Name" required></div>
    <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="Password" pattern=".{5,}" required title="Password must of minimum 5 characters." ></div>
    <div class="form-group">
    <input class="form-control" type="password" name="adminCode" placeholder="Admin Code(for admin)"></div>
    <button class="btn btn-lg btn-primary btn-block">Submit</button></div>
    </div>
</form>
</div>
</div>



